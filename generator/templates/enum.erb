<% suffix = ""
   suffix = "Values" if @type.is_a? NIFBitflags
   require_type @type.storage %>

enum class <%= @c_type_name %><%= suffix %>: <%= c_qualified_name_for_type @desc.types.fetch @type.storage %> {
  <% prefix = ""
     prefix = "#{@type.prefix}_" unless @type.prefix.nil? %>

  <% @type.options.each do |option| %>
    <%= description_comment option.description %>
    <%= prefix %><%= option.name.gsub(/ /, "") %> = <%= option.value %>,
   <% end %>
};

<% if @type.is_a? NIFBitflags %>
  using <%= @c_type_name %> = Bitflags<<%= @c_type_name %><%= suffix %>>;
<% end %>
